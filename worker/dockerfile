# ===== STAGE 1: Build =====
FROM eclipse-temurin:21-jdk AS build
WORKDIR /app

# Copia somente o que é necessário para baixar dependências em cache
COPY mvnw pom.xml ./
COPY .mvn .mvn
RUN chmod +x mvnw && ./mvnw -q -DskipTests dependency:go-offline

# Agora copia o código e compila
COPY src src
RUN ./mvnw -q -DskipTests clean package

# Copia o JAR gerado para um nome fixo
RUN cp target/*.jar /app/app.jar

# ===== STAGE 2: Runtime =====
FROM eclipse-temurin:21-jre AS runtime
WORKDIR /app

# Usuário não-root
RUN adduser --system --uid 1001 spring
USER 1001

# Copia o artefato
COPY --from=build /app/app.jar /app/app.jar

# Porta padrão do Spring Boot
EXPOSE 8080

# Flags de JVM otimizadas p/ containers
ENV JAVA_OPTS="-XX:MaxRAMPercentage=75 -XX:InitialRAMPercentage=25 -XX:+ExitOnOutOfMemoryError"
ENV SPRING_PROFILES_ACTIVE=prod

# (Opcional) Healthcheck - requer actuator habilitado
# HEALTHCHECK --interval=30s --timeout=3s --start-period=20s CMD wget -qO- http://localhost:8080/actuator/health || exit 1

ENTRYPOINT ["sh","-c","exec java $JAVA_OPTS -jar /app/app.jar"]
